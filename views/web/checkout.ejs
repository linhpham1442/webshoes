<div class="main-banner inner" id="home">
    <!-- header -->
    <header class="header">
        <div class="container-fluid px-lg-5">
            <!-- nav -->
            <nav class="py-4">
                <div id="logo">
                    <h1>
                        <a href="/"><img src="assets/web/images/logomain.png" width="90px" height="90px">
                        </a>
                    </h1>
                </div>

                <label for="drop" class="toggle">Menu</label>
                <input type="checkbox" id="drop" />
                <ul class="menu mt-2">
                    <li class="active"><a href="/">Trang chủ</a></li>
                    <li>
                        <!-- First Tier Drop Down -->
                        <label for="drop-2" class="toggle">Danh mục giày <span class="fa fa-angle-down" aria-hidden="true"></span> </label>
                        <a href="#">Danh mục giày<span class="fa fa-angle-down" aria-hidden="true"></span></a>
                        <input type="checkbox" id="drop-2" />
                        <ul>
                            <%data.cates.forEach(function(cate){%>
                                <li>
                                    <a href="/shop/<%=cate.slug%>">
                                        <%=cate.name%>
                                    </a>
                                </li>
                                <%})%>
                        </ul>
                    </li>
                    <li><a href="/about">Giới thiệu</a></li>
                    <li><a href="/blog">Blog</a></li>
                    <li><a href="/contact">Liên hệ</a></li>
                    <li><a href="/checkout">Giỏ hàng<small>(<%=data.lengthCart%>)</small></a></li>
                </ul>
            </nav>
            <!-- //nav -->
        </div>
    </header>
</div>

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/">Trang chủ</a>
    </li>
    <li class="breadcrumb-item active">Giỏ hàng</li>
</ol>
<%-include("./partials/message")%>
    <section class="ab-info-main py-md-5 py-4">
        <div class="container py-md-3">
            <!-- top Products -->
            <div class="row">
                <div class="col cart col-lg-8">
                    <h2>Giỏ hàng</h2>
                    <hr>
                    <% if (data.cart != undefined) {%>
                        <table class="table table-striped table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Ảnh sản phẩm</th>
                                    <th scope="col">Tên</th>
                                    <th scope="col">Số lượng</th>
                                    <th></th>
                                    <th scope="col">Đơn giá</th>
                                    <th scope="col">Tổng cộng</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <% var total =0 ; %>
                                <tbody>
                                    <% data.cart.forEach(function(item){%>
                                        <% var sub = item.qty * item.price%>
                                            <% total += +sub%>
                                                <tr scope="row">
                                                    <td><img src="data:<%=item.image.contentType%>;base64,<%=item.image.data%>" width="120px" height="120px"></td>
                                                    <td>
                                                        <%= item.name%>
                                                    </td>
                                                    <td>
                                                        <%= item.qty%>
                                                    </td>
                                                    <td>
                                                        <a href="/cart/update/<%= item.slug%>?action=add">+</a>&nbsp;
                                                        <a href="/cart/update/<%= item.slug%>?action=remove">-</a>&nbsp;
                                                    </td>
                                                    <td>
                                                        <%= item.price%>
                                                    </td>
                                                    <td>
                                                        <%= item.price*item.qty%>
                                                    </td>
                                                    <td><a href="/cart/update/<%= item.slug%>?action=clear"><span class="fa fa-trash-o" style="color: #121212"></span></a>&nbsp;</td>
                                                </tr>
                                                <%})%>
                                                    <tr>
                                                        <td colspan="6" align="right"><b>Total: </b>
                                                            <%= total%> <span>đ</span></td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="5" right>
                                                            <a class="clearcart btn btn-danger" href="/cart/clear">Xóa toàn bộ</a>
                                                        </td>
                                                        <!-- <td colspan="6" right>
                                                            <a class="btn btn-primary buynow" href="/cart/clear">Mua ngay</a>
                                                        </td> -->
                                                    </tr>

                                </tbody>
                        </table>
                        <!-- <div class="" style="float: right;">
                            <p><b>Total:</b>
                                <%= data.total%> <span>VND</span></p>
                        </div> -->
                        <% } else {%>
                            <h4 class="text-center"><img src="assets/web/images/empty-cart.png" alt="gio-hang-trong" width="400px" height="300px"></h4>

                            <% } %>
                </div>
                <div class="col col-lg-4 cart">
                    <h2>Đặt hàng</h2>
                    <hr>
                    <form action="/checkout" method="POST">
                        <div class="form-group">
                            <label for="formGroupExampleInput">Tên khách hàng</label>
                            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Tên" name="name">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Email</label>
                            <input type="email" class="form-control" id="formGroupExampleInput2" placeholder="Email" name="email">
                        </div>
                        <div class="form-group">
                            <label for="phone">Điện thoại</label>
                            <input type="number" class="form-control" id="phone" placeholder="Điện thoại" name="phone">
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ</label>
                            <textarea class="form-control" aria-label="With textarea" name="address"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Ghi chú</label>
                            <textarea class="form-control" aria-label="With textarea" name="note"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success  btn-user btn-block mt-2">Xác nhận mua hàng    </button>
                    </form>

                </div>
            </div>
        </div>
        <script>
            $(function() {
                $('a.clearcart').on('click', function() {
                    if (!confirm('Bạn chắc chắn muốn xóa tất cả?'))
                        return false;
                })
            })
        </script>
    </section>